<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/button_gridlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nocompany.jason.calculator.ButtonFragment">

    <Button
        android:id="@+id/shift"
        android:layout_marginLeft="20dp"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_columnWeight="1"
        android:textSize="14sp"
        android:text="SHIFT" />

    <Button
        android:id="@+id/leftPar"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="(" />

    <Button
        android:id="@+id/rightPar"
        android:layout_column="2"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text=")" />

    <Button
        android:id="@+id/seven"
        android:layout_marginLeft="20dp"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_columnWeight="1"
        android:text="7" />

    <Button
        android:id="@+id/eight"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="8" />

    <Button
        android:id="@+id/nine"
        android:layout_column="2"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="9" />

    <Button
        android:id="@+id/del"
        android:layout_column="3"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="DEL" />

    <Button
        android:id="@+id/allClear"
        android:layout_marginRight="20dp"
        android:layout_column="4"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="AC" />

    <Button
        android:id="@+id/four"
        android:layout_marginLeft="20dp"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="4" />

    <Button
        android:id="@+id/five"
        android:layout_column="1"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="5" />

    <Button
        android:id="@+id/six"
        android:layout_column="2"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="6" />

    <Button
        android:id="@+id/multiply"
        android:layout_column="3"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="\u00D7" />

    <Button
        android:id="@+id/divide"
        android:layout_column="4"
        android:layout_row="2"
        android:layout_marginRight="20dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="\u00F7" />

    <Button
        android:id="@+id/one"
        android:layout_marginLeft="20dp"
        android:layout_column="0"
        android:layout_row="4"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="1" />

    <Button
        android:id="@+id/two"
        android:layout_column="1"
        android:layout_row="4"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="2" />

    <Button
        android:id="@+id/three"
        android:layout_column="2"
        android:layout_row="4"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="3" />

    <Button
        android:id="@+id/add"
        android:layout_column="3"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="+" />

    <Button
        android:id="@+id/subtract"
        android:layout_column="4"
        android:layout_row="3"
        android:layout_marginRight="20dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="\u2212" />

    <Button
        android:id="@+id/zero"
        android:layout_column="0"
        android:layout_row="5"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="0" />

    <Button
        android:id="@+id/point"
        android:layout_column="1"
        android:layout_row="5"
        android:layout_marginBottom="20dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="." />

    <Button
        android:id="@+id/negate"
        android:layout_column="2"
        android:layout_row="5"
        android:layout_marginBottom="20dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="+/-" />

    <Button
        android:id="@+id/ans"
        android:layout_column="3"
        android:layout_row="4"
        android:layout_columnSpan="2"
        android:layout_marginRight="20dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="ANS" />

    <Button
        android:id="@+id/equals"
        android:layout_column="3"
        android:layout_row="5"
        android:layout_columnSpan="2"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="=" />
</GridLayout>

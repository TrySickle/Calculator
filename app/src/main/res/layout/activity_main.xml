<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="5"
    android:rowCount="6"
    tools:context="com.nocompany.jason.calculator.MainActivity">

    <TextView
        android:layout_column="0"
        android:layout_row="0"
        android:layout_columnSpan="5"
        android:layout_margin="20dp"
        android:layout_gravity="fill_horizontal"
        android:text="0"
        android:textSize="80sp"
        android:textAlignment="viewEnd" />

    <Button
        android:id="@+id/7"
        android:layout_marginLeft="20dp"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_columnWeight="1"
        android:text="7" />

    <Button
        android:id="@+id/8"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="8" />

    <Button
        android:id="@+id/9"
        android:layout_column="2"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="9" />

    <Button
        android:id="@+id/C"
        android:layout_column="3"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="C"/>

    <Button
        android:id="@+id/AC"
        android:layout_marginRight="20dp"
        android:layout_column="4"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="AC"/>

    <Button
        android:id="@+id/4"
        android:layout_marginLeft="20dp"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="4" />

    <Button
        android:id="@+id/5"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="5" />

    <Button
        android:id="@+id/6"
        android:layout_column="2"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="6" />

    <Button
        android:id="@+id/*"
        android:layout_column="3"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="x" />

    <Button
        android:id="@+id//"
        android:layout_column="4"
        android:layout_row="2"
        android:layout_marginRight="20dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="\u00F7" />

    <Button
        android:id="@+id/1"
        android:layout_marginLeft="20dp"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="1" />

    <Button
        android:id="@+id/2"
        android:layout_column="1"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="2" />

    <Button
        android:id="@+id/3"
        android:layout_column="2"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="3" />

    <Button
        android:id="@+id/+"
        android:layout_column="3"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="+" />

    <Button
        android:id="@+id/-"
        android:layout_column="4"
        android:layout_row="3"
        android:layout_marginRight="20dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="-" />

    <Button
        android:id="@+id/0"
        android:layout_column="0"
        android:layout_row="4"
        android:layout_marginLeft="20dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="0" />

        <Button
        android:id="@+id/."
        android:layout_column="1"
        android:layout_row="4"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="."/>

    <Button
        android:id="@+id/+-"
        android:layout_column="2"
        android:layout_row="4"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="+/-"/>



    <Button
        android:id="@+id/="
        android:layout_column="3"
        android:layout_row="4"
        android:layout_marginRight="20dp"
        android:layout_columnSpan="2"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="="/>


</GridLayout>
